{
	"manifest_version": 3,
	"name": "自動起動サイドパネル",
	"version": "1.0",
	"description": "拡張機能の有効化後、アイコンをクリックするとサイドパネルが開く",
	"permissions": ["sidePanel", "tabs"],
	"background": {
		"service_worker": "background.js"
	},
	"side_panel": {
		"default_path": "sidebar.html"
	},
	"action": {
		"default_title": "サイドパネルを開く"
	}
}
