{
    "manifest_version": 3,
    "name": "スクリーンショット拡張",
    "version": "1.0",
    "description": "ショートカットキーでスクリーンショットを撮影",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "commands": {
      "capture_screenshot": {
        "suggested_key": {
          "default": "Ctrl+Shift+S", 
          "mac": "Command+Shift+S"
        },
        "description": "スクリーンショットを撮る"
      }
    }
  }
  