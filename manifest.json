{
    "manifest_version": 3,
    "name": "範囲指定スクリーンショット",
    "version": "1.0",
    "description": "範囲指定でスクリーンショットを撮影する拡張機能。",
    "permissions": ["storage", "activeTab", "tabs", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ]
}
